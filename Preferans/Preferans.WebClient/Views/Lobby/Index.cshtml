
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cookie = Request.Cookies[".AspNet.ApplicationCookie"];
}

<div class="container">

    <div class="row">
        <ul id="errorList"></ul>
    </div>

    <div class="row">
        <div class="col-sm-3">
            <input type="text" id="message" />
            <input type="button" id="sendmessage" value="Send" />
            <input type="button" id="makemove" value="Make a move" />
            <ul id="discussion"></ul>
        </div>       

        <div class="col-sm-3">
            <div class="container" id="rooms"></div>
            <input type="button" id="creategame" value="Create game" />
        </div>
               

        <div class="col-sm-3">
            <div id="players" class="container"></div>
        </div>
    </div>
</div>

@section scripts{


    <!--Reference the autogenerated SignalR hub script. -->
    @*<script src="http://10.11.21.143:8080/signalr/hubs"></script>*@
    <script src="http://localhost:8080/signalr/hubs"></script>

    <!--Add script to update the page and send messages.-->

    <script type="text/javascript">

        $(function () {

            //Set the hubs URL for the connection
            $.connection.hub.url = "http://localhost:8080/signalr";
            
            $.connection.hub.qs = { 'AuthenticationCookie': '@cookie.Value' };

            // Declare a proxy to reference the hub.
            var lobby = $.connection.lobbyHub;

            // Create a function that the hub can call to broadcast messages.

            lobby.client.addPlayer = addPlayer;
            lobby.client.removePlayer = removePlayer;
            lobby.client.addMessage = appendMessage;
            lobby.client.displayErrorMessage = displayErrorMessage;
            lobby.client.makeMove = makeMove;
            lobby.client.addExistingPlayers = addExistingPlayers;
            lobby.client.addRoom = addRoom;
            lobby.client.addExistingGroups = addExistingRooms;
            lobby.client.removeGroup = removeGroup;
            lobby.client.addRoomMember = addRoomMember;

            // Get the user name and store it to prepend to messages.
            //$('#displayname').val(prompt('Enter your name:', ''));
            @*$('#displayname').val('@User.Identity.Name');
            $.connection.hub.qs = { 'username': $('#displayname').val() }*@
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {                
                configureSendMessageEvent(lobby);
                configureMakeMoveEvent(lobby);
                configureCreateGameEvent(lobby);
                lobbyHub = lobby;
            });
        });

    </script>
}


